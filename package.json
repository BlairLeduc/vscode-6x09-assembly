{
	"name": "6x09-assembly",
	"displayName": "6x09 Assembly",
	"description": "Language support for 6x09 Assembly language.",
	"author": "Blair Leduc",
	"license": "MIT",
	"version": "0.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly"
	},
	"bugs": {
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly/issues"
	},
	"publisher": "blairleduc",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"6809",
		"6309",
		"6x09",
		"assembly language"
	],
	"icon": "media/6x09-Assembly.png",
	"galleryBanner": {
		"color": "#00FF00",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.36.0"
	},
	"activationEvents": [
		"onLanguage:asm6x09"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "asm6x09",
				"aliases": [
					"6x09 Assembly",
					"asm6x09"
				],
				"extensions": [
					".asm",
					".a",
					".d"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "asm6x09",
				"scopeName": "source.asm.6x09",
				"path": "./syntaxes/6x09.tmLanguage.json"
			}
		],
		"problemMatchers": [
			{
				"name": "lwasm",
				"owner": "asm6x09",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^([^(].*)\\((\\d+)\\)\\s*:\\s*([A-Z]+)\\s*:\\s*(.*)$",
						"file": 1,
						"line": 2,
						"severity": 3,
						"message": 4
					}
				]
			}
		],
		"colors": [
			{
				"id": "keyword.other.opcode.6309.asm6x09",
				"description": "Color for 6309 opcodes.",
				"defaults": {
					"dark": "#5f56d6",
					"light": "#8800ff",
					"highContrast": "foreground"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"convert": "npx js-yaml syntaxes/6x09.tmLanguage.yaml > syntaxes/6x09.tmLanguage.json",
		"update": "npm run convert",
		"test": "npm run compile && node ./out/test/runTests"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.10",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"mocha": "^4.1.0",
		"tslint": "^5.18.0",
		"typescript": "^3.5.3",
		"vscode-test": "^1.0.0"
	},
	"dependencies": {}
}
