{
	"name": "6x09-assembly",
	"displayName": "6x09 Assembly",
	"description": "Language support for 6x09 Assembly language.",
	"author": "Blair Leduc",
	"license": "MIT",
	"version": "0.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly"
	},
	"bugs": {
		"url": "https://github.com/BlairLeduc/vscode-6x09-assembly/issues"
	},
	"publisher": "blairleduc",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"6809",
		"6309",
		"6x09",
		"assembly language"
	],
	"icon": "media/6x09-Assembly.png",
	"galleryBanner": {
		"color": "#00FF00",
		"theme": "light"
	},
	"engines": {
		"vscode": "^1.44.0"
	},
	"activationEvents": [
		"onLanguage:asm6x09",
		"onCommand:asm6x09.opcodeLowercase",
		"onCommand:asm6x09.opcodeUppercase",
		"onCommand:asm6x09.opcodeCapitalise"
	],
	"main": "./out/extension.js",
	"contributes": {
		"colors": [
			{
				"id": "keyword.other.opcode.6309.asm6x09",
				"description": "Color for 6309 opcodes.",
				"defaults": {
					"dark": "#5f56d6",
					"light": "#8800ff",
					"highContrast": "foreground"
				}
			}
		],
		"commands": [
			{
				"command": "asm6x09.opcodeLowercase",
				"title": "6x09: Transform opcodes to lowercase",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.opcodeUppercase",
				"title": "6x09: Transform opcodes to uppercase",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.opcodeCapitalise",
				"title": "6x09: Transform opcodes to capitalised",
				"when": "editorLangId == asm6x09"
			},
			{
				"command": "asm6x09.startEmulator",
				"title": "6x09: Start Emulator"
			}
		],
		"configuration": {
			"title": "6x09 Assembly Configuration",
			"properties": {
				"asm6x09.editor.opcodeCasing": {
					"type": "string",
					"default": "lowercase",
					"enum": [
						"lowercase",
						"uppercase",
						"capitalised"
					],
					"description": "The case used in opcode Intellisense."
				},
				"asm6x09.editor.hovers": {
					"type": "string",
					"default": "full",
					"enum": [
						"light",
						"full"
					],
					"description": "The ammount of documentation to provide when hovering over an opcode."
				}
			}
		},
		"configurationDefaults": {
			"[asm6x09]": {
				"editor.wordBasedSuggestions": false,
				"editor.tabSize": 8,
				"editor.useTabStops": true,
				"editor.insertSpaces": false,
				"editor.hover.enabled": true,
				"editor.codeLens": true
			}
		},
		"grammars": [
			{
				"language": "asm6x09",
				"scopeName": "source.asm.6x09",
				"path": "./syntaxes/6x09.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "asm6x09",
				"aliases": [
					"6x09 Assembly",
					"asm6x09"
				],
				"extensions": [
					".asm",
					".a",
					".d",
					"defs",
					".s"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "asm6x09.opcodeLowercase",
					"when": "editorLangId == asm6x09"
				},
				{
					"command": "asm6x09.opcodeUppercase",
					"when": "editorLangId == asm6x09"
				},
				{
					"command": "asm6x09.opcodeCapitalise",
					"when": "editorLangId == asm6x09"
				}
			]
		},
		"problemMatchers": [
			{
				"name": "lwasm",
				"owner": "asm6x09",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^([^(].*)\\((\\d+)\\)\\s*:\\s*([A-Z]+)\\s*:\\s*(.*)$",
						"file": 1,
						"line": 2,
						"severity": 3,
						"message": 4
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint -c .eslintrc.js --ext .ts src",
		"watch": "tsc -watch -p ./",
		"convert": "npx js-yaml syntaxes/6x09.tmLanguage.yaml > syntaxes/6x09.tmLanguage.json",
		"update": "npm run convert",
		"test": "npm run compile && node ./out/test/runTests"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/line-reader": "0.0.28",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.8.1",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"await-notify": "^1.0.1",
		"file-url": "^3.0.0",
		"line-reader": "^0.4.0"
	}
}
