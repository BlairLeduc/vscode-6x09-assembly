{
  "comments": {
    "lineComment": "*"
  },
  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "/",
      "close": "/",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "(",
      "close": ")"
    }
  ],
  "autoCloseBefore": " \n\t",
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "/",
      "/"
    ],
    [
      "'",
      "'"
    ]
  ],
  "wordPattern": "[a-z_@$][a-z0-9$_@?]*"
}