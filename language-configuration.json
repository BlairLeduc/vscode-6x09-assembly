{
  "comments": {
    "lineComment": "*"
  },
  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "/",
      "close": "/",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "(",
      "close": ")"
    }
  ],
  "autoCloseBefore": " \n\t",
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "/",
      "/"
    ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\*\\s*region\\b|\\b(IF|if|MACRO|macro).*\\b",
      "end": "^\\s*\\*\\s*endregion\\b|\\b(END|end).\\b"
    }
  }
}